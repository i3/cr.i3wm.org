+                START_COLOR("color_bad");
+                colorful_output = true;
+        }
+
         for (walk = format; *walk != '\0'; walk++) {
                 if (*walk != '%') {
                         *(outwalk++) = *walk;
@@ -122,6 +177,9 @@ void print_disk_info(yajl_gen json_gen, char *buffer, const char *path, const ch
                 }
         }
 
+        if (colorful_output)
+                END_COLOR;
+
         *outwalk = '\0';
